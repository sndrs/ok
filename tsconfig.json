{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "target": "es2018",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "es6"
  },
  "include": ["src", "types.d.ts"],
  "exclude": ["dist", "node_modules"]
}
